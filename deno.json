{
  "lock": true,
  "nodeModulesDir": "manual",
  "license": "MIT",
  "workspace": ["./packages/*"],
  "unstable": ["kv"],
  "imports": {
    "@biomejs/biome": "npm:@biomejs/biome@^1.9.4",
    "@effect/vitest": "npm:@effect/vitest@^0.18.1",
    "@std/assert": "jsr:@std/assert@^1.0.11",
    "@vitest/coverage-v8": "npm:@vitest/coverage-v8@^2.1.9",
    "@vitest/ui": "npm:@vitest/ui@^2.1.9",
    "effect": "npm:effect@^3.13.1",
    "vitest": "npm:vitest@^2.1.9"
  },
  "tasks": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:doc": "deno test --doc packages/*/src/*.ts --trace-leaks",
    "lint": "biome check --error-on-warnings",
    "lint:doc": "deno doc --lint packages/*/src/*.ts",
    "ci": "biome ci --error-on-warnings",
    "typecheck": "deno check --doc packages/*/src/*.ts packages/*/tests/*.ts"
  },
  "compilerOptions": {
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "useUnknownInCatchVariables": true,
    "verbatimModuleSyntax": true
  },
  "lint": {
    "exclude": ["no-explicit-any"]
  }
}
